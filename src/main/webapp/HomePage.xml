<body>
<header>
  <h1>CrossTalk</h1>

  <h2>Real time chat for events</h2>
  <ol id="roomStatus">
    <li><a href="#">2 current rooms</a></li>
    <li><a href="#">10 future rooms</a></li>
    <li><a href="#">17 archived rooms</a></li>
  </ol>
  <p id="corporateLogo"><a href="#">Webstock</a></p>
</header>
<section id="content">
  <ul id="roomList">

    @Repeat(items=rooms, var="room")
    <li class="rank2 active">
      <a href="/r/chat/${room.name}">
        <h1>${room.displayName}</h1>

        <h2>${room.host}</h2>

        <p class="time">${__page.period(room)}</p>
        <section class="contributors">
          <h2>${room.occupancy.users.size()} Contributors</h2>
          <ul>
            @Repeat(items=__page.occupants(room), var="user")
            <li><img src="${user.avatar}" width="24" height="24" alt="${user.displayName}"/></li>
          </ul>
          <p class="lurkers">+N lurkers</p>
        </section>
        <section class="topics">
          <h2>People are talking about</h2>
          <ol>
            @Repeat(items=__page.trends(room), var="trend")
            <li class="rank${index + 1}">${trend.word}</li>

          </ol>
        </section>
      </a>
    </li>
