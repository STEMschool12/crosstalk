<!DOCTYPE html>

<html lang="en">
<head>
  <title>CrossTalk</title>
  <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
  <meta name="viewport" content="initial-scale=1.0, user-scalable=no"/>
  <meta name="apple-mobile-web-app-capable" content="yes"/>

  <link rel="stylesheet" href="/fonts/fonts.css"/>
  <link rel="stylesheet" href="/main.css"/>

  <script src="/js/jquery-1.5.min.js"></script>
  <script src="/js/main.js"></script>
</head>
<body>
<header>
  <h1>CrossTalk</h1>

  <h2>Real time chat for events</h2>
  <ol id="roomStatus">
    <li><a href="#">2 current rooms</a></li>
    <li><a href="#">10 future rooms</a></li>
    <li><a href="#">17 archived rooms</a></li>
  </ol>
  <p id="corporateLogo"><a href="#">Webstock</a></p>
</header>
<section id="content">
  <ul id="roomList">

    @Repeat(items=rooms, var="room")
    <li class="rank2 ${__page.status(room)}">
      <a href="/r/chat/${room.name}">
        <h1>${room.displayName}</h1>

        <h2>${room.host}</h2>

        <p class="time">${__page.period(room)}</p>
        <section class="contributors">
          <h2>${__page.contributors(room)} Contributors</h2>
          <ul>
            @Repeat(items=__page.occupants(room), var="user")
            <li><img src="${user.avatar}" width="24" height="24" alt="${user.displayName}"/></li>
          </ul>
          <p class="lurkers">+N lurkers</p>
        </section>
        <section class="topics">
          <h2>People are talking about</h2>
          <ol>
            @Repeat(items=__page.trends(room), var="trend")
            <li class="rank${index + 1}">${trend.word}</li>

          </ol>
        </section>
      </a>
    </li>
  </ul>
</section>
<a id="allRoomsLink" href="#">Show all rooms for this event (past &amp; future)</a>
</body>
</html>
